<div class="content" ng-app="employDirectory" ng-controller="employee">
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="brand" href="#">Employee Directory</a>

            <div class="nav-collapse collapse">
                <ul class="nav">
                    <li class="home-menu" ng-class="!indvidualEmp && !contact ? 'active' : ''"><a href="#" ng-click="home()">Home</a></li>
                    <li class="contact-menu" ng-class="indvidualEmp && !contact ? 'active' : ''"><a href="#" ng-click="contactDetailsClick()">Contact</a></li>
          
                </ul>
                <form class="navbar-search pull-right dropdown" ng-show="!indvidualEmp && !contact">
                    <input id="searchText" class="search-query dropdown-toggle" placeholder="Search" type="search" ng-model="empfilter.firstName">
                <ul class="dropdown-menu"></ul></form>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</div>
<div class="employeeList" ng-show="!indvidualEmp && !contact">
  
<div class="employList">
  <div ng-repeat="emp in employees | filter: empfilter" class="indemp">
    <a href="#" ng-click="empDetail(emp)">
      <img src="/assets/profile_pic/{{emp.pic}}" style="float:left;margin-right: 10px;" height="50" width="50">
      <p class="list-item">{{emp.first_name + emp.last_name}}<br>{{emp.title}}</p>
    </a>
  </div>
</div>
  </div>
  <div class="indiviualempList" ng-show="indvidualEmp && !contact">
  <div id="details" class="span7"><div><p><img src="/assets/profile_pic/{{empind.pic}}" height="160" width="160"></p>
<h3>{{empind.first_name + empind.last_name}}</h3>
<h4>{{empind.title}}</h4>
<br>
        <table class="table table-striped">
            
            <tbody><tr>
                <td>{{empind.office_phone}}</td>
                <td><i class="icon-home"></i> {{empind.cell_phone}}</td>
            </tr>
            <tr>
                <td>Cell Phone:</td>
                <td><i class="icon-headphones"></i> {{empind.cell_phone}}</td>
            </tr>
            <tr>
                <td>Email:</td>
                <td><i class="icon-envelope"></i> <a href="mailto:jking@fakemail.com">{{empind.email}}</a></td>
            </tr>
            
        </tbody></table>

        
</div></div>
  </div>  
    <div class="indiviualempList" ng-show="contact && !indvidualEmp ">
  <div id="details" class="span7"><div><p><img src="/assets/profile_pic/{{contactDetails.pic}}" height="160" width="160"></p>
<h3>{{contactDetails.firstName + contactDetails.lastName}}</h3>
<h4>{{contactDetails.title}}</h4>
<br>
        <table class="table table-striped">
            
            <tbody><tr>
                <td>{{contactDetails.officePhone}}</td>
                <td><i class="icon-home"></i> {{contactDetails.cellPhone}}</td>
            </tr>
            <tr>
                <td>Cell Phone:</td>
                <td><i class="icon-headphones"></i> {{contactDetails.cellPhone}}</td>
            </tr>
            <tr>
                <td>Email:</td>
                <td><i class="icon-envelope"></i> <a href="mailto:jking@fakemail.com">{{contactDetails.email}}</a></td>
            </tr>
            
        </tbody></table>

        
</div></div>
  </div>  
</div>